<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color (you can customize this to fit your app's theme) -->
    <solid android:color="@color/white" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Border (optional) -->
    <stroke
        android:width="1dp"
        android:color="@color/primaryColor" />

    <!-- Padding (optional) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
