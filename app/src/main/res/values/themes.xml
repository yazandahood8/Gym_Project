<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Gym" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light and dark theme colors here -->
        <!-- For example, define your primary colors for light/dark themes -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/backgroundColor</item>
    </style>

    <style name="Theme.Gym" parent="Base.Theme.Gym" />

    <style name="Theme.Gym.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Gym.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Gym.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
